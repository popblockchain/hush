<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:weightSum="100"
    android:background="@drawable/backgnd"
     >
  
  <!-- title  -->

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tv_puzzle_reg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/puzzle_reg"
        android:textSize="16sp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_weight="8"
        android:weightSum="10"
        android:layout_marginLeft ="10dp"
        android:layout_marginRight ="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp" >


        <LinearLayout
            android:layout_weight="10"
            android:weightSum="10"
            android:layout_marginLeft ="10dp"
            android:layout_marginRight ="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:padding="0dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10">

                <ImageView
                    android:layout_marginTop ="0dp"
                    android:layout_marginLeft ="10dp"
                    android:layout_marginRight ="10dp"
                    android:layout_marginBottom ="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/text_box" />

                <EditText
                    android:id="@+id/et_puzzle_url"
                    android:hint="@string/puzzle_utb_hint"
                    android:layout_marginTop ="5dp"
                    android:layout_marginLeft ="15dp"
                    android:layout_marginRight ="15dp"
                    android:layout_marginBottom ="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:textSize="15sp"
                    android:inputType = "text"
                    />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_weight="8"
        android:weightSum="10"
        android:layout_marginLeft ="10dp"
        android:layout_marginRight ="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp" >


        <LinearLayout
            android:layout_weight="10"
            android:weightSum="10"
            android:layout_marginLeft ="10dp"
            android:layout_marginRight ="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:padding="0dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="10">

                <ImageView
                    android:layout_marginTop ="0dp"
                    android:layout_marginLeft ="10dp"
                    android:layout_marginRight ="10dp"
                    android:layout_marginBottom ="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/text_box" />

                <EditText
                    android:id="@+id/et_image_url"
                    android:hint="@string/puzzle_img_hint"
                    android:layout_marginTop ="5dp"
                    android:layout_marginLeft ="15dp"
                    android:layout_marginRight ="15dp"
                    android:layout_marginBottom ="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffffff"
                    android:textSize="15sp"
                    android:inputType = "text"
                    />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_weight="8"
        android:weightSum="10"
        android:layout_marginLeft ="10dp"
        android:layout_marginRight ="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp" >

    <LinearLayout
        android:layout_weight="10"
        android:weightSum="10"
        android:layout_marginLeft ="10dp"
        android:layout_marginRight ="10dp"
        android:layout_width="0dp"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:padding="0dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10">

            <ImageView
                android:layout_marginTop ="0dp"
                android:layout_marginLeft ="10dp"
                android:layout_marginRight ="10dp"
                android:layout_marginBottom ="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/text_box" />

            <EditText
                android:id="@+id/et_utb_title"
                android:hint="@string/puzzle_utb_title"
                android:layout_marginTop ="5dp"
                android:layout_marginLeft ="15dp"
                android:layout_marginRight ="15dp"
                android:layout_marginBottom ="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:textSize="15sp"
                android:inputType = "text"
                />

        </RelativeLayout>
    </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
          android:layout_weight="20"
          android:weightSum="10"
        android:layout_marginLeft ="10dp"
        android:layout_marginRight ="10dp"
          android:layout_width="match_parent"
          android:layout_height="0dp" >
    
         <Button
	           android:id="@+id/btn_check"
              android:layout_width="0dp"
              android:layout_height="50dp"
              android:layout_weight="5"
                android:layout_marginTop ="2dp" 
                android:layout_marginBottom ="2dp" 
                android:layout_marginLeft ="10dp"
                android:layout_marginRight ="10dp"
              android:background="@drawable/bottom_menu_button"
              android:onClick="check_pressed"
             android:textColor="#ffffff"
                android:textSize="18sp"
	           android:text="@string/puzzle_utb_check" />

        <ImageView
            android:id="@+id/iv_puzzle"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:layout_gravity="right"
            android:gravity="right"
            />


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_weight="10"
        android:weightSum="10"
        android:layout_marginLeft ="10dp"
        android:layout_marginRight ="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp" >

        <Button
            android:id="@+id/btn_puzzle_reg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:layout_marginTop ="2dp"
            android:layout_marginBottom ="2dp"
            android:layout_marginLeft ="10dp"
            android:layout_marginRight ="10dp"
            android:background="@drawable/bottom_menu_button"
            android:onClick="done_pressed"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:text="@string/puzzle_reg" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tv_puzzle_reg_help"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:layout_gravity="start"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="left|center_vertical"
        android:text="@string/puzzle_reg_help"
        android:textSize="15sp"
       android:textColor="#000000" />


</LinearLayout>
