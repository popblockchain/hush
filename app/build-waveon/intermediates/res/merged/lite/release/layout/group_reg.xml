<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LLSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:weightSum="100"
    android:background="@drawable/backgnd"
     >
  
  <!-- group id -->

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <LinearLayout
          android:id="@+id/ll_group_id"
          android:layout_weight="8"
          android:weightSum="10" 
          android:layout_width="match_parent"
          android:layout_height="0dp" >

        <TextView
            android:id="@+id/tv_group_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/group_id"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />
    
        <RelativeLayout
        android:padding="0dp" 
        android:layout_width="0dp"
        android:layout_height="match_parent" 
        android:layout_weight="6">
        
        <ImageView
            android:id="@+id/image_add_phone"
            android:layout_marginTop ="0dp" 
            android:layout_marginLeft ="0dp" 
            android:layout_marginRight ="10dp" 
            android:layout_marginBottom ="0dp" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/text_box" />
        
        <EditText
				android:id="@+id/et_group_id"
                android:layout_marginTop ="5dp" 
                android:layout_marginLeft ="5dp" 
                android:layout_marginRight ="15dp" 
                android:layout_marginBottom ="5dp" 
				android:layout_width="match_parent"
				android:layout_height="match_parent"
                android:background="#ffffff"
                android:hint="@string/group_id_hint"
                android:textSize="18sp" 
                android:inputType = "text"                 
                 />
         
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <LinearLayout
          android:id = "@+id/ll_user_name"
          android:layout_weight="8"
          android:weightSum="10" 
          android:layout_width="match_parent"
          android:layout_height="0dp" >

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="20dp"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/group_register_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000000" />
    
        <RelativeLayout
        android:padding="0dp" 
        android:layout_width="0dp"
        android:layout_height="match_parent" 
        android:layout_weight="6">
        
        <ImageView
            android:layout_marginTop ="0dp" 
            android:layout_marginLeft ="0dp" 
            android:layout_marginRight ="10dp" 
            android:layout_marginBottom ="0dp" 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/text_box" />
        
        <EditText
				android:id="@+id/et_user_name"
                android:layout_marginTop ="5dp" 
                android:layout_marginLeft ="5dp" 
                android:layout_marginRight ="15dp" 
                android:layout_marginBottom ="5dp" 
				android:layout_width="match_parent"
				android:layout_height="match_parent"
                android:background="#ffffff"
                android:hint="@string/user_name_hint"
                android:textSize="18sp" 
                android:inputType = "text"                 
                 />
         
        </RelativeLayout>
        
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
            android:layout_weight="5"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/tv_member_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:text="@string/member_view_right"
        android:textColor="#000000"
        android:textSize="18sp" />
          
    <LinearLayout
          android:layout_weight="8"
          android:weightSum="20" 
          android:layout_width="match_parent"
          android:layout_height="0dp" >
    
       <RadioButton
           android:id="@+id/rbtn_member_view_all"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="9"
           android:textSize="15sp"
           android:onClick="rbtn_member_view_all_pressed"
            android:textColor="#000000"
           android:text="@string/member_view_all" />
            
       <RadioButton
           android:id="@+id/rbtn_member_view_mgr"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="11"
           android:textSize="15sp"
           android:onClick="rbtn_member_view_mgr_pressed"
            android:textColor="#000000"
           android:text="@string/member_view_mgr" />

     </LinearLayout>
       
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
            android:layout_weight="3"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/tv_decrypt_copy"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:text="@string/decrypt_copy"
        android:textColor="#000000"
        android:textSize="18sp" />
     
    <LinearLayout
          android:layout_weight="8"
          android:weightSum="20" 
          android:layout_width="match_parent"
          android:layout_height="0dp" >
    
       <RadioButton
           android:id="@+id/rbtn_decrypt_copy_yes"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="9"
           android:textSize="15sp"
           android:onClick="rbtn_decrypt_copy_yes_pressed"
            android:textColor="#000000"
           android:text="@string/decrypt_copy_yes" />
            
       <RadioButton
           android:id="@+id/rbtn_decrypt_copy_no"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="11"
           android:textSize="15sp"
           android:onClick="rbtn_decrypt_copy_no_pressed"
            android:textColor="#000000"
           android:text="@string/decrypt_copy_no" />
     
     </LinearLayout>
            
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
            android:layout_weight="3"
        android:textAppearance="?android:attr/textAppearanceSmall" />
    
    <TextView
        android:id="@+id/tv_otg_use"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_weight="5"
        android:text="@string/otg_use"
        android:textColor="#000000"
        android:textSize="18sp" />
     
    <LinearLayout
          android:layout_weight="8"
          android:weightSum="20" 
          android:layout_width="match_parent"
          android:layout_height="0dp" >
    
       <RadioButton
           android:id="@+id/rbtn_otg_must_no"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="9"
           android:textSize="15sp"
           android:onClick="rbtn_otg_must_no_pressed"
            android:textColor="#000000"
           android:text="@string/otg_must_no" />
            
       <RadioButton
           android:id="@+id/rbtn_otg_must_yes"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="11"
           android:textSize="15sp"
           android:onClick="rbtn_otg_must_yes_pressed"
            android:textColor="#000000"
           android:text="@string/otg_must_yes" />
     
     </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
            android:layout_weight="16"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
          android:layout_weight="10"
          android:weightSum="10" 
          android:layout_width="match_parent"
          android:layout_height="0dp" >
    
         <Button
	           android:id="@+id/btn_member_list"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="4" 
                android:layout_marginTop ="2dp" 
                android:layout_marginBottom ="2dp" 
                android:layout_marginLeft ="5dp" 
                android:layout_marginRight ="5dp" 
              android:background="@drawable/bottom_menu_button"
              android:onClick="btn_member_list_pressed"
             android:textColor="#ffffff"
                android:textSize="16sp" 
	           android:text="@string/member_list" />
        
        <Button
	           android:id="@+id/btn_group_regist"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:layout_weight="6" 
                android:layout_marginTop ="0dp" 
              android:background="@drawable/bottom_menu_button"
              android:onClick="btn_group_regist_pressed"
            android:textColor="#ffffff"
                android:textSize="20sp" 
	           android:text="@string/group_regist" />

    </LinearLayout>	   

</LinearLayout>
